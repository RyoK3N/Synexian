# Production Environment Configuration for Synexian Labs
# Copy this file to .env in production and update with your actual values

NODE_ENV=production
PORT=5000

# Database Configuration
# For Google Cloud SQL: postgresql://username:password@/database?host=/cloudsql/project:region:instance
# For external PostgreSQL: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://synexian:your_secure_password@postgres:5432/synexian

# Redis Configuration (Optional - for session storage)
REDIS_URL=redis://:your_redis_password@redis:6379

# JWT Secret - Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Frontend URL for CORS
FRONTEND_URL=https://your-domain.com

# Application Version
APP_VERSION=1.0.0

# Security Settings
HELMET_CSP_ENABLED=true
TRUST_PROXY=true

# Google Cloud Settings (when deploying to GCP)
GOOGLE_CLOUD_PROJECT=your-project-id
GCLOUD_STORAGE_BUCKET=your-storage-bucket

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
API_RATE_LIMIT=100
LOGIN_RATE_LIMIT=5

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# Email Configuration (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External Services (if needed)
CALENDLY_API_KEY=your-calendly-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key